<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.supernova.spacebook">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
    
        <activity
            android:label="@string/welcome_activity_title"
            android:name=".activity.WelcomeActivity"
            android:theme="@style/WelcomeActivityTheme">
        
            <intent-filter>
            
                <category android:name="android.intent.category.LAUNCHER"/>
            
                <action android:name="android.intent.action.MAIN"/>
            </intent-filter>
        </activity>
    
        <activity
            android:label="@string/login_activity_title"
            android:name=".activity.LoginActivity"
            android:theme="@style/LoginActivityTheme"/>
    
        <activity
            android:label="@string/signup_activity_title"
            android:name=".activity.SignupActivity"
            android:theme="@style/SignupActivityTheme"/>
    
        <activity
            android:label="@string/profile_photos_activity_title"
            android:name=".activity.ProfilePhotosActivity"
            android:theme="@style/ProfilePhotosActivityTheme"/>
    
        <activity
            android:label="@string/profile_settings_activity_title"
            android:name=".activity.ProfileSettingsActivity"
            android:theme="@style/ProfileSettingsActivityTheme"/>
    
        <activity
            android:label="@string/event_detail_activity_title"
            android:name=".activity.EventDetailActivity"
            android:theme="@style/EventDetailActivityTheme"/>
    
        <activity
            android:label="@string/two_activity_title"
            android:name=".activity.TwoActivity"
            android:theme="@style/TwoActivityTheme"/>
    </application>
</manifest>